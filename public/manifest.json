{
    "manifest_version": 3,
    "name": "Format Converter",
    "description": "Convert image, audio, and video formats easily.",
    "version": "1.0",
    "action": {
      "default_popup": "",
      "default_title": "Format Converter"
    },
    "permissions": ["activeTab", "windows", "tabs", "storage", "scripting"],
    "background": {
      "service_worker": "background.js"
    },
    "host_permissions": [],
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  